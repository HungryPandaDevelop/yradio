mixin popup-template(num, topicModal, textModal, visibility, addClass)
  if(visibility)
    .popup.element-show.show(data-element= num  class= addClass)
      .popup-overlay.popup-overlay-js
      .popup-container 
        .close-btn.close-btn_popup.close-js
        .main-full
          if topicModal
            h2= topicModal
          if textModal
            .lead
              = textModal
        if block
          block
  else
    .popup.element-show(data-element=num class=addClass)
      .popup-overlay.popup-overlay-js
      .popup-container
        .close-btn.close-btn_popup.close-js
        .main-full
          if topicModal
            h2= topicModal
          if textModal
            .lead
              = textModal
        if block
          block